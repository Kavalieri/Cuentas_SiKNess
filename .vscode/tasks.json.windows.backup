{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🧹 Clear All Caches",
      "type": "shell",
      "command": "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue .next,node_modules/.cache,tsconfig.tsbuildinfo; Write-Host '✅ Caches limpiadas: .next/, node_modules/.cache/, tsconfig.tsbuildinfo' -ForegroundColor Green",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "🚀 Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):\\s+|\\s+-\\s+)(error|warning|info)\\s+TS(\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*- (wait|event)\\s+-\\s+",
          "endsPattern": "^\\s*✓ Compiled|✓ Ready"
        }
      }
    },
    {
      "label": "🔨 Build Production",
      "type": "shell",
      "command": "npm run build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        "$tsc",
        {
          "owner": "eslint",
          "pattern": [
            {
              "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error)\\s+-\\s+(.+)\\s+\\((.+)\\)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5,
              "code": 6
            }
          ]
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "🧪 Test",
      "type": "shell",
      "command": "npm test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "🔍 Lint",
      "type": "shell",
      "command": "npm run lint",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "🔄 Full Clean + Build",
      "dependsOn": ["🧹 Clear All Caches", "🔨 Build Production"],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "🧹 Limpiar Caché (Linux)",
      "type": "shell",
      "command": "rm -rf .next node_modules/.cache tsconfig.tsbuildinfo && echo '✅ Cachés limpiadas: .next/, node_modules/.cache/, tsconfig.tsbuildinfo'",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "🔄 Reiniciar PM2 Producción",
      "type": "shell",
      "command": "sudo -u www-data pm2 restart cuentassik-prod && echo '✅ PM2 reiniciado' && sleep 2 && sudo -u www-data pm2 logs cuentassik-prod --lines 20 --nostream",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "🔄 Reiniciar Apache",
      "type": "shell",
      "command": "sudo systemctl restart apache2 && echo '✅ Apache reiniciado' && sudo systemctl status apache2 --no-pager",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "🔄 Reiniciar MySQL",
      "type": "shell",
      "command": "sudo systemctl restart mysql && echo '✅ MySQL reiniciado' && sudo systemctl status mysql --no-pager",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "🔄 Reiniciar Todos los Servicios",
      "type": "shell",
      "command": "echo '🔄 Reiniciando MySQL...' && sudo systemctl restart mysql && echo '✅ MySQL OK' && echo '🔄 Reiniciando Apache...' && sudo systemctl restart apache2 && echo '✅ Apache OK' && sleep 2 && echo '🔄 Reiniciando PM2...' && sudo -u www-data pm2 restart cuentassik-prod && echo '✅ PM2 OK' && sleep 3 && echo '\n📊 Estado de servicios:' && sudo systemctl status mysql apache2 --no-pager | grep -E '(Active:|●)' && echo '\n📋 Logs PM2:' && sudo -u www-data pm2 logs cuentassik-prod --lines 15 --nostream",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "🚀 Deploy Producción (Build + Deploy + Restart)",
      "type": "shell",
      "command": "echo '🔨 Building...' && npm run build && echo '📦 Deploying...' && sudo rsync -av --delete .next/ /opt/cuentassik/prod/.next/ --exclude='cache' && sudo chown -R www-data:www-data /opt/cuentassik/prod/.next/ && echo '🔄 Restarting services...' && sudo systemctl restart apache2 && sudo -u www-data pm2 restart cuentassik-prod && sleep 3 && echo '\n✅ Deploy completo!' && echo '\n📋 Logs PM2:' && sudo -u www-data pm2 logs cuentassik-prod --lines 20 --nostream",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "🧹🚀 Full Reset + Deploy (Con Caché)",
      "type": "shell",
      "command": "echo '🧹 Limpiando caché...' && rm -rf .next node_modules/.cache tsconfig.tsbuildinfo && echo '✅ Caché limpiada' && echo '🔨 Building...' && npm run build && echo '📦 Deploying...' && sudo rsync -av --delete .next/ /opt/cuentassik/prod/.next/ --exclude='cache' && sudo chown -R www-data:www-data /opt/cuentassik/prod/.next/ && echo '🔄 Restarting MySQL...' && sudo systemctl restart mysql && echo '🔄 Restarting Apache...' && sudo systemctl restart apache2 && sleep 2 && echo '🔄 Restarting PM2...' && sudo -u www-data pm2 restart cuentassik-prod && sleep 3 && echo '\n✅ Full reset completo!' && echo '\n📊 Estado servicios:' && sudo systemctl status mysql apache2 --no-pager | grep -E '(Active:|●)' && echo '\n📋 Logs PM2:' && sudo -u www-data pm2 logs cuentassik-prod --lines 20 --nostream",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "📊 Ver Estado de Servicios",
      "type": "shell",
      "command": "echo '📊 Estado de servicios críticos:\n' && sudo systemctl status mysql apache2 ssh --no-pager && echo '\n📋 PM2:' && sudo -u www-data pm2 list && echo '\n📈 Últimos logs PM2:' && sudo -u www-data pm2 logs cuentassik-prod --lines 15 --nostream",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
