{
  // ============================================================================
  // ü§ñ GitHub Copilot - AGENTS.md Configuration
  // ============================================================================

  // ‚úÖ NUEVO v1.105 - Support for nested AGENTS.md files (Experimental)
  // Permite tener AGENTS.md espec√≠ficos por carpeta (app/, database/, scripts/)
  "chat.useNestedAgentsMdFiles": true,

  // Usar AGENTS.md del workspace como instrucciones para Copilot
  "github.copilot.chat.useWorkspaceContext": true,

  // Habilitar instrucciones en l√≠nea (comentarios)
  "github.copilot.chat.inlineInstructions": true,

  // ============================================================================
  // üîå Model Context Protocol (MCP) Servers
  // ============================================================================

  // MCPs activos para este proyecto:
  // - Git MCP: Operaciones git avanzadas (commit, push, branch, stash, etc.)
  // - GitHub MCP: Issues, PRs, releases, workflows
  // - Fetch MCP: Fetching URLs, YouTube transcripts
  // - Shell MCP: Ejecuci√≥n de comandos shell
  // - Context7/Upstash: Documentaci√≥n de librer√≠as actualizadas
  // - MarkItDown: Conversi√≥n de documentos a Markdown

  // ============================================================================
  // üìù Editor Configuration
  // ============================================================================

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // ============================================================================
  // üé® File Associations
  // ============================================================================

  "files.associations": {
    "*.sql": "sql",
    "AGENTS.md": "markdown",
    "*.code-workspace": "jsonc"
  },

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/.archive": true
  },

  // ============================================================================
  // üîç Search Configuration
  // ============================================================================

  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/.archive": true,
    "**/database/migrations/applied/archive": true
  },

  // ============================================================================
  // üì¶ TypeScript/JavaScript
  // ============================================================================

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative",

  // ============================================================================
  // üéØ Next.js Specific
  // ============================================================================

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ============================================================================
  // üóÑÔ∏è SQL Configuration
  // ============================================================================

  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools",
    "editor.formatOnSave": false // SQL no tiene formatter consistente
  },

  "sqltools.useNodeRuntime": true,

  // ============================================================================
  // üêö Shell Scripts
  // ============================================================================

  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "files.eol": "\n"
  },

  "shellformat.flag": "-i 2 -ci", // 2 spaces indent, case indent

  // ============================================================================
  // üßπ Trailing Whitespace
  // ============================================================================

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // ============================================================================
  // üîß ESLint
  // ============================================================================

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  // ============================================================================
  // üé® Prettier
  // ============================================================================

  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,

  // ============================================================================
  // üìã Tasks
  // ============================================================================

  "task.autoDetect": "on",
  "task.problemMatchers": [],

  // ============================================================================
  // üîê Security
  // ============================================================================

  // Excluir archivos sensibles de sync
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/database/migrations/applied/archive/**": true
  },

  // ============================================================================
  // üìä Git Configuration
  // ============================================================================

  "git.enableSmartCommit": false, // Requerir stage expl√≠cito
  "git.confirmSync": true,
  "git.autofetch": true,
  "git.pruneOnFetch": true,

  // ============================================================================
  // üåê Remote Development (SSH)
  // ============================================================================

  "remote.SSH.connectTimeout": 60,
  "remote.SSH.remoteServerListenOnSocket": true,

  // ============================================================================
  // üí° Helpful Recommendations
  // ============================================================================

  // Extensions recomendadas est√°n en .vscode/extensions.json
  "extensions.ignoreRecommendations": false
}
