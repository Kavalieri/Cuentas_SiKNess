{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üßπ Clear All Caches",
      "type": "shell",
      "command": "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue .next,node_modules/.cache,tsconfig.tsbuildinfo; Write-Host '‚úÖ Caches limpiadas: .next/, node_modules/.cache/, tsconfig.tsbuildinfo' -ForegroundColor Green",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):\\s+|\\s+-\\s+)(error|warning|info)\\s+TS(\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*- (wait|event)\\s+-\\s+",
          "endsPattern": "^\\s*‚úì Compiled|‚úì Ready"
        }
      }
    },
    {
      "label": "üî® Build Production",
      "type": "shell",
      "command": "npm run build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        "$tsc",
        {
          "owner": "eslint",
          "pattern": [
            {
              "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error)\\s+-\\s+(.+)\\s+\\((.+)\\)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5,
              "code": 6
            }
          ]
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "üß™ Test",
      "type": "shell",
      "command": "npm test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Lint",
      "type": "shell",
      "command": "npm run lint",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "üîÑ Full Clean + Build",
      "dependsOn": ["üßπ Clear All Caches", "üî® Build Production"],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
