# ============================================
# BASE DE DATOS POSTGRESQL
# ============================================
DATABASE_URL="postgresql://cuentassik_user:password@localhost:5432/cuentassik_prod"

# ============================================
# AUTENTICACIÓN (JWT)
# ============================================
# Secret para firmar tokens JWT (CAMBIAR EN PRODUCCIÓN)
# Genera uno con: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# ============================================
# SMTP (Correo electrónico)
# ============================================
SMTP_HOST="smtp.gmail.com"           # Servidor SMTP
SMTP_PORT="587"                      # Puerto (587 para TLS, 465 para SSL)
SMTP_SECURE="false"                  # true para 465 (SSL), false para 587 (TLS)
SMTP_USER="tu-email@gmail.com"       # Usuario SMTP
SMTP_PASS="tu-contraseña-app"        # Contraseña o app password
SMTP_FROM="noreply@cuentassik.com"   # Email remitente (opcional)

# ============================================
# APLICACIÓN
# ============================================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Admin System Configuration
NEXT_PUBLIC_SYSTEM_ADMIN_EMAIL="admin@example.com"

# ============================================
# NOTAS
# ============================================
# Gmail: Genera "Contraseña de aplicación" en https://myaccount.google.com/apppasswords
# JWT_SECRET: Genera con openssl rand -base64 32
# Para desarrollo: .env.development.local
# Para producción: .env.production.local
