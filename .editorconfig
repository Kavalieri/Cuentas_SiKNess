root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.{js,ts,tsx,jsx}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[*.sql]
indent_size = 2

[*.sh]
indent_size = 2
